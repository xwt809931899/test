/* miniprogram/pages/news/news.wxss */
page{
  background-color: #ADD8E6;
}
.main{
  width: 90%;
  background-color: 	#00BFFF;
  height: 250rpx;
  /* text-align: center; */
  margin: 100rpx auto;
  /* box-shadow: 5rpx 5rpx 5rpx 5rpx; */
  /* display:flex; */
  /* justify-content:space-between; */
  /* padding: 20rpx; */
  transition: .5s all;
  position: relative;
  border-radius: 38rpx;
}
.main .backgroud{
  width: 100%;
  height: 250rpx;
  position: relative;
  /* border-radius: 38rpx; */
  float: left;

  

}
.main .question-card .backgroud image{
  width: 675rpx;
   height: 250rpx;
   position: absolute;
   left: 0;
   border-radius: 38rpx;
}
.main .question-card{
  position: relative;
  overflow: hidden;
  margin-top: 120rpx;
  margin-bottom: 100rpx;
}
.main .question-card .userinfoAndPass{
  width: 100%;
  height: 90rpx;
  position: absolute;
  left: 0;
}
.main .question-card .userinfoAndPass .userinfo .userinfo-image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 22rpx;
  top: 25%;
}
.main .question-card .userinfoAndPass .userinfo .userinfo-image image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;

}
.main .question-card .userinfoAndPass .userinfo .userinfo-name{
  position: absolute;
  top:28%;
  left: 85rpx;
  font-size: 30rpx;
  width: 500rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical; 
  
}
.main .question-card .userinfoAndPass .pass{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 22%;
  left: 85%;

}
.main .question-card .userinfoAndPass .pass image{
  width: 50rpx;
  height: 50rpx;
}
.main .question-card .contentAndDetail{
  width: 100%;
  height: 160rpx;
  position: absolute;
  left: 0%;
  top:36%;
}
.main .question-card .contentAndDetail .contentText{
  text-align: center;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical; 

}
.main .question-card .contentAndDetail .detail{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 53%;
  left: 85%;
}
.main .question-card .contentAndDetail .detail image{
  width: 50rpx;
  height: 40rpx;
}
.none{
  width: 100%;
  height: 100rpx;
  color: black;
  position: absolute;
  text-align: center;
  top: 125rpx;
}